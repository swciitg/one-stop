{
  "openapi": "3.0.3",
  "info": {
    "$ref": "./info.json"
  },
  "servers": {
    "$ref": "./servers.json"
  },
  "paths": {
    "/user/guest/login": {
      "$ref": "./paths/user/guest_login.json"
    },
    "/user/accesstoken": {
      "$ref": "./paths/user/access_token.json"
    },
    "/user": {
      "$ref": "./paths/user/get_user_info.json"
    },
    "/user/device-tokens": {
      "post": {
        "$ref": "./paths/user/post_device_token.json"
      },
      "patch": {
        "$ref": "./paths/user/update_device_token.json"
      }
    },
    "/user/email/{email}": {
      "$ref": "./paths/user/get_user_by_email.json"
    },
    "/user/notifs": {
      "get": {
        "$ref": "./paths/user/get_personal_notifs.json"
      },
      "delete": {
        "$ref": "./paths/user/delete_personal_notifs.json"
      }
    },
    "/user/notifs/prefs": {
      "$ref": "./paths/user/update_notif_prefs.json"
    },
    "/user/getUserId": {
      "$ref": "./paths/user/get_user_id.json"
    },
    "/user/bug-fix": {
      "$ref": "./paths/user/bug_fix.json"
    }
  },
  "components": {
    "schemas": {
      "User": {
        "$ref": "./paths/schemas/user_schema.json"
      },
      "DeviceToken": {
        "$ref": "./paths/schemas/device_token_schema.json"
      },
      "NotificationPrefs": {
        "$ref": "./paths/schemas/notification_prefs_schema.json"
      }
    },
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}
